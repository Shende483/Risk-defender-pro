pipeline {
    agent any

    environment {
        // Set any environment variables here, like NODE_ENV or API keys
        // Example: NODE_ENV = 'production'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Shende483/Risk-defender-pro.git'
            }
        }

        stage('Install Frontend Dependencies') {
            steps {
                dir('frontend') {
                    sh 'npm install'
                }
            }
        }

        stage('Install Backend Dependencies') {
            steps {
                dir('backend') {
                    sh 'npm install'
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontend') {
                    sh 'npm run build' // Adjust if your build command is different
                }
            }
        }

        stage('Build Backend') {
            steps {
                dir('backend') {
                    sh 'npm run build' // Adjust if your backend has a build step
                }
            }
        }

        stage('Test Frontend') {
            steps {
                dir('frontend') {
                    sh 'npm test' // Adjust if needed
                }
            }
        }

        stage('Test Backend') {
            steps {
                dir('backend') {
                    sh 'npm test' // Adjust if needed
                }
            }
        }

        stage('Deploy Frontend') {
            steps {
                // Replace with your actual frontend deployment commands
                echo 'Deploying frontend...'
                // Example: sh './deploy-frontend.sh'
            }
        }

        stage('Deploy Backend') {
            steps {
                // Replace with your actual backend deployment commands
                echo 'Deploying backend...'
                // Example: sh './deploy-backend.sh'
            }
        }
    }

    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed!'
        }
    }
}
