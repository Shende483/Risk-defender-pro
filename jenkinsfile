pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Deploy with Docker Compose') {
            steps {
                sh 'docker-compose -f docker-compose.local.yml down'
                sh 'docker-compose -f docker-compose.local.yml up -d --build'
            }
        }
        
        stage('Verify') {
            steps {
                sleep(time: 30, unit: 'SECONDS')
                sh "curl -I http://localhost:3030"
                sh "curl -I http://localhost:3040/api/health"
            }
        }
    }
    
    post {
        always {
            echo 'Cleanup may be needed with: docker-compose -f docker-compose.local.yml down'
        }
        success {
            echo 'Services running:'
            echo 'Frontend: http://localhost:3030'
            echo 'Backend: http://localhost:3040'
        }
    }
}
