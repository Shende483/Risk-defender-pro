pipeline {
    agent any

    environment {
        FRONTEND_DIR = "frontend"
        BACKEND_DIR = "backend"
        FRONTEND_PORT = "3030"
        BACKEND_PORT = "3040"
    }

    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/Shende483/Risk-defender-pro.git'
            }
        }

        stage('Install Frontend') {
            steps {
                dir("${FRONTEND_DIR}") {
                    sh 'npm install'
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir("${FRONTEND_DIR}") {
                    sh 'npm run build'
                }
            }
        }

        stage('Serve Frontend (Local)') {
            steps {
                dir("${FRONTEND_DIR}") {
                    sh """
                        pm2 delete frontend || true
                        pm2 serve dist ${FRONTEND_PORT} --spa --name frontend
                    """
                }
            }
        }

        stage('Install Backend') {
            steps {
                dir("${BACKEND_DIR}") {
                    sh 'npm install'
                }
            }
        }

        stage('Run Backend (Local)') {
            steps {
                dir("${BACKEND_DIR}") {
                    sh """
                        pm2 delete backend || true
                        pm2 start main.js --name backend --watch
                    """
                }
            }
        }
    }

    post {
        success {
            echo "✅ App is running locally on localhost:${FRONTEND_PORT} and ${BACKEND_PORT}"
        }
        failure {
            echo "❌ Something went wrong!"
        }
    }
}
